{
  "compilerOptions": {
    "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
    "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
    "jsx": "preserve",
  },
  "include": [
    "./src/**/*.*",
    "./src/shims-vue.d.ts",
    "src/**/*",
    "src/.vitepress/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": "true"
}